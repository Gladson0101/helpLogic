<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helplogic">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cerebro"
        android:label="HelhpLogic!"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:screenOrientation="portrait" android:name=".EscolhaActivity"></activity>
        <activity android:screenOrientation="portrait" android:name=".LoginActivity" />
        <activity android:screenOrientation="portrait" android:name=".CadastroActivity" />
        <activity android:screenOrientation="portrait" android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>